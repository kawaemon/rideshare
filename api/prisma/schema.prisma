generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// SQLite does not support native enums. Use String and validate in app.

model User {
  id         String       @id // ascii lowercase user id
  name       String       @default("")
  Ride       Ride[]
  RideMember RideMember[]
}

model Ride {
  id          Int          @id @default(autoincrement())
  driverId    String
  destination String
  fromSpot    String
  departsAt   DateTime
  capacity    Int
  mode        String       @default("car")
  minParticipants Int?
  note        String       @default("")
  createdAt   DateTime     @default(now())
  driver      User         @relation(fields: [driverId], references: [id])
  members     RideMember[]

  @@index([departsAt])
}

model RideMember {
  rideId   Int
  userId   String
  joinedAt DateTime @default(now())
  verifiedAt DateTime?
  locationCheckIp       String?
  locationCheckResult   Boolean?
  locationCheckedAt     DateTime?
  ride     Ride     @relation(fields: [rideId], references: [id])
  user     User     @relation(fields: [userId], references: [id])

  @@id([rideId, userId])
}
